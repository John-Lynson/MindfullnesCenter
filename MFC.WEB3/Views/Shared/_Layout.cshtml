<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WEB</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- FontAwesome (voor iconen) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <!-- Jouw eigen CSS bestanden -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/loaders.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
</head>
<body>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Sidebar Toggle Button voor mobiele apparaten -->
    <button class="btn btn-primary" id="sidebarCollapse" style="position: fixed; z-index: 2;">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
        <a href="/"><i class="fas fa-home"></i> Home</a>
        <a href="/Meditations"><i class="fas fa-headphones"></i> Meditaties</a>
        <a href="/Community"><i class="fas fa-users"></i> Community</a>
        <a href="/Programs"><i class="fas fa-book"></i> Programma's</a>
        <a href="/Account"><i class="fas fa-user"></i> Account</a>
    </div>

    <!-- Overlay voor dim-effect wanneer sidebar is geopend op mobiel -->
    <div class="overlay"></div>

    <!-- Page Content -->
    <div id="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <!-- Footer inhoud -->
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Loaders.js" asp-append-version="true"></script>
    <script src="~/js/navbar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
